@{
    ViewBag.Title = "Academic Advising - Get Message (Shared)";
    var id = ViewBag.id;
}
<h2>Academic Advising - Viewing Message</h2>
<hr>

<div id="divAcademicAdvisingGet">
    <ul class="list-group">
        <li class="list-group-item" data-bind="text: 'From : ' + viewModel.sender "></li>
        <li class="list-group-item" data-bind="text: 'To: ' + viewModel.receiver "></li>

        <li class="list-group-item" data-bind="text: 'Subject: ' + viewModel.messageSubject"></li>
        <li class="list-group-item list-group-item-warning list-group-item-heading">Message Body </li>
        <li class="list-group-item" data-bind="text: viewModel.messageBody"></li>

    </ul>
    <input type="button" value="Delete Messsage" onclick="deleteMessage()">
   
    <input type="button" value="Respond To Message" onclick="createMessage()">
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var academicAdvisingViewModelObj = new AcademicAdvisingViewModel();
        academicAdvisingViewModelObj.GetMessage("@id");
    });

    function deleteMessage() {
        var academicAdvisingViewModelObj = new AcademicAdvisingViewModel();
        academicAdvisingViewModelObj.Delete("@id");
        window.history.back();
    }

    function updateMessage() {
        window.location = "Update?id=" + "@id";
    }

    function createMessage() {
        window.location = "Respond?id=" + "@id";
    }
</script>
